{
  "name": "illustrious.online",
  "private": true,
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "turbo format",
    "check": "turbo check",
    "check:ci": "turbo check:ci",
    "test": "turbo test",
    "prepare": "husky && husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.0",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "bun": "latest"
  },
  "packageManager": "bun@1.1.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "@biomejs/biome",
    "core-js",
    "core-js-pure",
    "esbuild",
    "sharp",
    "supabase"
  ],
  "dependencies": {
    "next": "^15.1.3"
  }
}
