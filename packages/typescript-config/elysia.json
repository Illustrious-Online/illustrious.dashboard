{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": ["esnext"],
      "allowJs": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist"
    }
  }