{
  "name": "@repo/ui",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "exports": {
    "./close-button": "./src/components/close-button.tsx",
    "./color-mode": "./src/components/color-mode.tsx",
    "./button": "./src/components/button.tsx",
    "./checkbox": "./src/components/checkbox.tsx",
    "./input": "./src/components/input.tsx",
    "./radio": "./src/components/radio.tsx",
    "./provider": "./src/provider.tsx",
    "./wrapper": "./src/wrapper.tsx"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest --passWithNoTests --coverage",
    "generate:component": "turbo gen react-component",
    "check": "bunx @biomejs/biome check ./src",
    "check:fix": "bunx @biomejs/biome check --write ./src"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@turbo/gen": "^2.4.0"
  },
  "dependencies": {
    "@chakra-ui/cli": "^3.2.3",
    "@chakra-ui/color-mode": "^2.2.0",
    "@chakra-ui/next-js": "^2.4.2",
    "@chakra-ui/react": "^3.2.3",
    "@emotion/react": "^11.14.0",
    "add": "^2.0.6",
    "color-mode": "^0.1.0",
    "next-themes": "^0.4.4",
    "snippet": "^0.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
