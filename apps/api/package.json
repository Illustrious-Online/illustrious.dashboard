{
  "name": "api",
  "version": "1.0.50",
  "main": "index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "docker build -t illustrious-api .",
    "start": "NODE_ENV=production bun src/index.ts",
    "start:docker": "docker-compose -f docker-compose.yml up",
    "db:docker": "docker compose -f docker-compose-db.yml up",
    "db:reset": "./src/utils/reset-db.sh",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.2.0",
    "elysia": "latest"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "bun-types": "^0.5.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": "latest"
  }
}